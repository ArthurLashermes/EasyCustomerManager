<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_easy_customer_manager_list" path="/admin/easy-customer-manager/list" methods="GET|POST">
        <default key="_controller">EasyCustomerManager:Back:list</default>
    </route>


    <!-- Configuration -->

    <route id="easy.customer.manager.configuration" path="/admin/module/EasyCustomerManager" methods="post">
        <default key="_controller">EasyCustomerManager\Controller\ConfigController::setAction</default>
    </route>
</routes>
